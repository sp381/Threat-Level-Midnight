<section>
    <h1> Create a Login </h1>
    <form class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-2" for="username"> Username: </label>
            <input type="user-name" class="form-control" id="create-username" placeholder="Enter Username" />
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email"> Email: </label>
            <input type="email" class="form-control" id="email-signup" placeholder="Enter E-mail" />
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="password"> Password: </label>
            <input type="password" class="form-control" id="create-password" placeholder="Enter Password" />
        </div>

        <button type="button" id="create-signup">Submit</button>
    </form>
</section>
